@model AddressBook.DataAccess.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="row">
        <div class="input-field col s12 m6">
            @Html.LabelFor(model => model.Email, new { htmlAttributes = new { @class = "validate" } })
            @Html.TextBoxFor(model => model.Email)
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12 m6">
            @Html.LabelFor(m => m.Password, new { @class = "validate" })
            @Html.PasswordFor(m => m.Password)
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12 m6">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "validate" })
            @Html.PasswordFor(m => m.ConfirmPassword)
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <button class="btn waves-effect waves-light" type="submit" name="action">
                Register
                <i class="mdi-content-send right"></i>
            </button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
